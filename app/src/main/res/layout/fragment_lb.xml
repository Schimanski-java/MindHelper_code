<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".LbFragment">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView" >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_lb_head"
                style="@style/TextHeadStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Linka bezpečí" />

            <TextView
                android:id="@+id/text_ed"
                style="@style/TextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_lb" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:stretchColumns="1">

                <TableRow>
                    <TextView
                        android:text="Telefonní číslo"
                        style="@style/TextStyle"
                        android:padding="3dip" />
                    <TextView
                        android:text="116 111"
                        style="@style/TextStyle"
                        android:gravity="right"
                        android:padding="3dip" />
                </TableRow>
                <TableRow>
                    <TextView
                        android:text="E-mail"
                        style="@style/TextStyle"
                        android:padding="3dip" />
                    <TextView
                        android:text="pomoc@linkabezpeci.cz"
                        style="@style/TextStyle"
                        android:gravity="right"
                        android:padding="3dip" />
                </TableRow>
                <TableRow>
                    <TextView
                        android:text="Webové stránky"
                        style="@style/TextStyle"
                        android:padding="3dip" />
                    <TextView
                        android:text="linkabezpeci.cz"
                        style="@style/TextStyle"
                        android:gravity="right"
                        android:padding="3dip" />
                </TableRow>
            </TableLayout>

            <Button
                android:id="@+id/button_mail_lb"
                style="@style/ButtonDisStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Napsat na mail linky bezpečí" />

            <Button
                android:id="@+id/button_website_lb"
                style="@style/ButtonDisStyle"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:text="Navštívit stránku linky bezpečí" />

            <Button
                android:id="@+id/button_call_lb"
                style="@style/ButtonDisStyle"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:text="Zavolat na linku bezpečí"/>

        </LinearLayout>
    </ScrollView>
</FrameLayout>